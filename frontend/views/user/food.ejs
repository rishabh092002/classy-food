<section style="background-color: #eee;">
    <div class="text-center container py-5">
      <h4 class="mt-4 mb-5"><strong>Bestsellers</strong></h4>
      <div class="row">
        <% for(let i = 0; i < products.length; i++) { let pro = products[i]; %>
        <div class="col-lg-4 col-md-12 mb-4">
          <div class="card">
            <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
              data-mdb-ripple-color="light mt-3">
              <img src="http://localhost:3005/images/<%= pro.images; %>" class="w-50" />
              <a href="#!">
                <div class="mask">
                  <div class="d-flex justify-content-start align-items-end h-100">
                    <h5><span class="badge bg-primary ms-2">New</span></h5>
                  </div>
                </div>
                <div class="hover-overlay">
                  <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                </div>
              </a>
            </div>
            <div class="card-body">
              <a href="" class="text-reset">
                <h5 class="card-title mb-3"><%= pro.title; %></h5>
              </a>
              <h6 class="mb-3">Price <%= pro.price; %>/-</h6>
              <a href="javascript:void(0);" class="btn btn-primary" onclick="addToCart(`<%= pro.id; %>`);">Add To cart</a>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </section>
<script src="https://code.jquery.com/jquery-3.6.4.js"></script>
<script>
  function addToCart(productId){
    console.log("add to cart", productId);
    $.ajax({
      url: "/add-to-cart",
      method: "post",
      data: { proId: productId },
